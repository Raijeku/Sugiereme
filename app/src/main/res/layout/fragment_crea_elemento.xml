<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.edu.udea.compumovil.gr10_20172.sugiereme.CreaElementoFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/element_image"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_title"
        android:id="@+id/element_name"
        android:layout_below="@id/element_image"
        android:inputType="text|textCapSentences"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_description"
        android:id="@+id/element_description"
        android:layout_below="@id/element_name"
        android:inputType="text|textCapSentences"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/element_button"
        android:layout_below="@id/element_description"
        android:text="@string/create_element"/>


</RelativeLayout>
